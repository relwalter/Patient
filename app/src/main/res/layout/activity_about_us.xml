<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_about_us"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="com.patient.AboutUsActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/nav_header_vertical_spacing"
        app:srcCompat="@mipmap/ic_launcher"/>

    <TextView
            android:text="健康不用等"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/dateRed"
            android:padding="@dimen/dp_20"
            android:textAlignment="center"/>
    <TextView
            android:text="　健康不用等是一款帮助广大有就诊需求的用户快速挂号、便捷寻医问诊的应用。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="8dp"
            android:padding="@dimen/dp_20"
            android:textAlignment="textStart"/>
    <TextView
            android:text="　在线就能轻松挂号，看病快人一步！如果有特殊需要，还可以提交定向就诊请求，最晚不超过12小时处理，点医生不再是难题！"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="8dp"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:textAlignment="textStart"/>

    <TextView
            android:text="　应用系第一安卓小组成员吴志敏、苏丹和颜笑金所著，版权所有，引用请注明出处。"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="8dp"
            android:padding="@dimen/dp_20"
            android:textAlignment="textStart"/>

    <TextView
            android:id="@+id/go_github"
            android:text="　现已将项目开源 GitHub：\n　https://github.com/relwalter/Patient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/dateRed"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="8dp"
            android:paddingRight="@dimen/dp_20"
            android:paddingLeft="@dimen/dp_20"
            android:textAlignment="textStart"/>

    <TextView
            android:text="　® 2017 HigherLoft"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:textColor="@color/gray"
            android:fontFamily="sans-serif-light"
            android:lineSpacingExtra="8dp"
            android:paddingTop="@dimen/card_padding"
            android:textAlignment="center"/>

</LinearLayout>
