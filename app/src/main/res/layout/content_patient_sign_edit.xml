<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_patient_sign_edit"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.patient.PatinetSignActivity">

    <LinearLayout
            android:layout_margin="30dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
                android:id="@+id/realname_sign_edit"
                android:text="@string/name"
                android:textSize="20sp"
                android:textColor="@color/dateRed"
                android:textAlignment="center"
                android:paddingBottom="@dimen/dp_20"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        <TableLayout
                android:layout_marginLeft="@dimen/nav_header_vertical_spacing"
                android:layout_marginRight="@dimen/nav_header_vertical_spacing"
                android:paddingBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <TableRow>
                <TextView
                        android:text="@string/prompt_height"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <EditText
                        android:id="@+id/height_sign_edit"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:text="170"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="textStart"
                        android:textColor="@color/dateRed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </TableRow>
            <TableRow>
            <TextView
                    android:text="@string/prompt_weight"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            <EditText
                    android:id="@+id/weight_sign_edit"
                    android:maxLines="1"
                    android:inputType="numberDecimal"
                    android:text="60"
                    android:textSize="14sp"
                    android:fontFamily="sans-serif-light"
                    android:textAlignment="textStart"
                    android:textColor="@color/dateRed"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:text="@string/prompt_temp"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <EditText
                        android:id="@+id/temp_sign_edit"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:text="37.5"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="textStart"
                        android:textColor="@color/dateRed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:text="@string/prompt_breath"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <EditText
                        android:id="@+id/breath_sign_edit"
                        android:maxLines="1"
                        android:inputType="number"
                        android:text="50"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="textStart"
                        android:textColor="@color/dateRed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:text="@string/prompt_pulse"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <EditText
                        android:id="@+id/pulse_sign_edit"
                        android:maxLines="1"
                        android:inputType="number"
                        android:text="65"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="textStart"
                        android:textColor="@color/dateRed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </TableRow>
            <TableRow android:paddingBottom="@dimen/dp_4">
                <TextView
                        android:text="@string/prompt_pressure"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:paddingRight="@dimen/nav_header_vertical_spacing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <EditText
                        android:id="@+id/pressure_sign_edit"
                        android:maxLines="1"
                        android:text="90/110"
                        android:inputType="text"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="textStart"
                        android:textColor="@color/dateRed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:text="@string/prompt_blsugar"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <EditText
                        android:id="@+id/blsugar_sign_edit"
                        android:maxLines="1"
                        android:inputType="numberDecimal"
                        android:text="6.5"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="textStart"
                        android:textColor="@color/dateRed"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </TableRow>
            <TableRow>
                <TextView
                        android:text="@string/prompt_more"
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                <EditText
                        android:id="@+id/more_sign_edit"
                        android:inputType="textMultiLine"
                        android:text="æ— "
                        android:textSize="14sp"
                        android:fontFamily="sans-serif-light"
                        android:textAlignment="textStart"
                        android:elegantTextHeight="true"
                        android:textColor="@color/dateRed"
                        android:layout_width="110dp"
                        android:layout_height="wrap_content"/>
            </TableRow>
        </TableLayout>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
